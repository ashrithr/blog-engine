<h2>Login</h2>
<form method="post" action="/login">
  <table>
    <tr>
      <td class="label">
        Username
      </td>
      <td>
        <input type="text" name="username" id="username">
      </td>
    </tr>

    <tr>
      <td class="label">
        Password
      </td>
      <td>
        <input type="password" name="password" id="password">
      </td>
      <td class="error">
        <%= login_error %>
      </td>      
    </tr>
  </table>
  <input type="submit">
</form>